@page 
@model LaRuta.Pages.Drivers.UpdateDriverModel
@{
    var message = ViewData["Message"]?.ToString();
    var error = ViewData["Error"]?.ToString();
}

<h2>Actualizar Chofer:</h2>

@{
    if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">@message</div>
    }
    if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger" role="alert">@error</div>
    }
}

<form method="post" id="update-driver-form" autocomplete="off">

    <div class="inputContainer mb-3">
        <input class="form-control" type="number" asp-for="UpdateDriverRequest.CI" readonly />
    </div>
    
    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.FirstName" type="text" class="form-control" placeholder="Nombre" required>
    </div>

    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.LastName" type="text" class="form-control" placeholder="Apellido" required>
    </div>

    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.Age" type="number" class="form-control" placeholder="Edad" required min="18" max="99">
    </div>

    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.Address" type="text" class="form-control" placeholder="Direccion" required >
    </div>

    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.LicenseNumber" type="text" class="form-control" placeholder="Numero de Licencia" required >
    </div>

    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.LicenseExpiration" type="date" class="form-control" placeholder="Vencimiento" required>
        <span asp-validation-for="UpdateDriverRequest.LicenseExpiration" class="text-danger"></span>
    </div>

    <div class="inputContainer mb-3">
        <input asp-for="UpdateDriverRequest.VehicleId" type="number" class="form-control" placeholder="Código de Vehículo" min="10000" max="99999">
    </div>

    <div class="adminButtons">
        <button class="btn btn-light m-2" type="submit" id="update-button">Actualizar</button>
    </div>

</form>
